<h1>Sign up</h1>
<%= form_for(@user) do |f| %>

  <%= render 'shared/error_messages',
                          object: f.object  %><br><br>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br><br>

  <br><%= f.submit "Create account" %>
<% end %>
